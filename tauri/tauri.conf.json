{
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "app",
      "dmg"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "copyright": "AGPL-v3",
    "category": "Utility",
